@model IEnumerable<OASystems.ITRBroker.Models.ITRJobMetadata>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CronSchedule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsScheduled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreviousFireTimeUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NextFireTimeUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEnabled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CronSchedule)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsScheduled)
            </td>
            <td>
                @(item.PreviousFireTimeUtc.HasValue ? TimeZoneInfo.ConvertTimeFromUtc(item.PreviousFireTimeUtc.Value, TimeZoneInfo.Local).ToString("dd/MM/yyyy HH:mm:ss") : String.Empty)
            </td>
            <td>
                @(item.NextFireTimeUtc.HasValue ? TimeZoneInfo.ConvertTimeFromUtc(item.NextFireTimeUtc.Value, TimeZoneInfo.Local).ToString("dd/MM/yyyy HH:mm:ss") : String.Empty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEnabled)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
